<configuration>
    <property name="path" value="/home/gooagoo/log"/>
    <property name="logName" value="springboot-demo"/>
    
    <appender name="LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${path}/springboot-demo-local.log</file>
        <encoder>
            <pattern>
                [%d{yyyy-MM-dd HH:mm:ss.SSS}][%logger{32}:%line][%level][][][${host.ip}][] - %msg%n
            </pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${path}/springboot-demo-local.log_%d{yyyyMMdd}</fileNamePattern>
            <maxHistory>32</maxHistory>
        </rollingPolicy>
    </appender>


    <root level="debug">
        <!--<appender-ref ref="STDOUT"/>-->
        <appender-ref ref="LOG_FILE"/>
    </root>
</configuration>